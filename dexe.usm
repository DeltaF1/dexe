%DEBUG2 { .Console/short DEO2 #0a .Console/char DEO }

( devices )

|00 @System     [ &vector $2 &pad     $6 &r      $2 &g     $2 &b     $2 ]
|10 @Console    [ &vector $2 &pad     $6 &char   $1 &byte  $1 &short $2 &string $2 ]
|20 @Screen     [ &vector $2 &width   $2 &height $2 &pad   $2 &x     $2 &y $2 &addr $2 &color $1 ]
|80 @Controller [ &vector $2 &button  $1 &key    $1 ]
|90 @Mouse      [ &vector $2 &x       $2 &y      $2 &state $1 &chord $1 ]
|a0 @File       [ &vector $2 &success $2 &offset $2 &pad   $2 &name  $2 &length $2 &load $2 &save $2 ]

( variables )

|0000

@color  $1 
@scroll [ &x $2 &y $2 ]
@pointer   [ &x $2 &y $2 ]
@selection
	&from $2
	&to $2
	&scroll $2
@path 
	&length $1
	&name $20

( program )

|0100
	
	( theme )
	#0f7e .System/r DEO2 
	#0fc3 .System/g DEO2 
	#0f93 .System/b DEO2

	( vectors ) 
	;on-button .Controller/vector DEO2
	;on-mouse .Mouse/vector DEO2

	;untitled-txt ;new-file JSR2

	( select )

	#0021 .selection/from STZ2
	#0039 .selection/to STZ2
	;redraw JSR2

BRK

@on-mouse ( -> )
	
	;draw-cursor JSR2

	.Mouse/state DEI #00 ! #01 JCN [ BRK ]

	.Mouse/x DEI2 .Mouse/y DEI2 ;get-cell JSR2 DUP2 .selection/from STZ2 .selection/to STZ2

	;redraw JSR2

BRK

@on-button ( -> )

BRK

@redraw ( -- )
	
	( display selection )

	#0000 .Screen/y DEO2
	;font-hex .Screen/addr DEO2
	#0000 .Screen/height DEI2 #0018 --
	&loop
		#0000 .Screen/x DEO2
		OVR2 #0002 ** ;MEMORY ++ ;draw-line JSR2
		SWP2 #0008 ++ SWP2
		OVR2 .Screen/y DEO2
		LTH2k ,&loop JCN
	POP2 POP2

	;draw-scrollbar JSR2


	.Screen/height DEI2 #0008 -- .Screen/y DEO2
	#0000 .Screen/x DEO2

	.selection/from LDZ2 #22 ;draw-short JSR2

	#0020 .Screen/x DEO2

	.selection/to LDZ2 #22 ;draw-short JSR2


	#0050 .Screen/x DEO2
	#21 ;draw-filepath JSR2

	( draw selected line number )
	( draw selection range )
	( draw filesize )

	.Screen/width DEI2 #0008 -- .Screen/x DEO2
	;save-icn .Screen/addr DEO2
	#21 .Screen/color DEO
	.Screen/x DEI2 #0010 -- .Screen/x DEO2
	;load-icn .Screen/addr DEO2
	#21 .Screen/color DEO
	.Screen/x DEI2 #0008 -- .Screen/x DEO2
	;make-icn .Screen/addr DEO2
	#21 .Screen/color DEO

RTN

@draw-line ( addr* -- )
	
	STH2

	( bytes )
	#00 #10
	&byte-loop
		OVR TOS STH2kr ++ STH2k

		LDA #04 SFT TOS #0008 ** ;font-hex ++ .Screen/addr DEO2
		#21 [ STH2kr ;is-selected JSR2 #07 * ] + .Screen/color DEO
		.Screen/x DEI2 #0007 ++ .Screen/x DEO2
		STH2kr LDA #0f AND TOS #0008 ** ;font-hex ++ .Screen/addr DEO2
		#21 [ STH2kr ;is-selected JSR2 #07 * ] + .Screen/color DEO
		.Screen/x DEI2 #0007 ++ .Screen/x DEO2
		POP2r

		( jump after a short )
		OVR #01 AND #00 = ,&no-leap JCN
			.Screen/x DEI2 #0003 ++ .Screen/x DEO2
		&no-leap

		INCR
		LTHk ,&byte-loop JCN
	POP2

	( ascii )
	#00 #10
	&ascii-loop
		OVR TOS STH2kr ++ STH2k
		LDA
		#20 - 
		TOS 8**
		;font ++ .Screen/addr DEO2 
		#21 [ STH2kr ;is-selected JSR2 #0b * ] + .Screen/color DEO
		POP2r
		.Screen/x DEI2 #0008 ++ .Screen/x DEO2
		INCR
		LTHk ,&ascii-loop JCN
	POP2

	POP2r

RTN

@is-selected ( addr* -- flag )
	
	;MEMORY --
	 
	DUP2 .selection/from LDZ2 !! ,&continue JCN
		POP2 #01 RTN
	&continue 

	STH2k

	.selection/from LDZ2 #0001 -- >> 
	STH2r .selection/to LDZ2 << 
	#0101 ==

RTN

@draw-short ( short* color -- )

	STH SWP 
	DUP #04 SFT TOS #0008 ** ;font-hex ++ .Screen/addr DEO2
	( draw ) STHkr .Screen/color DEO
	#0f AND TOS #0008 ** ;font-hex ++ .Screen/addr DEO2
	.Screen/x DEI2 #0007 ++ .Screen/x DEO2
	( draw ) STHkr .Screen/color DEO
	DUP #04 SFT TOS #0008 ** ;font-hex ++ .Screen/addr DEO2
	.Screen/x DEI2 #0007 ++ .Screen/x DEO2
	( draw ) STHkr .Screen/color DEO
	#0f AND TOS #0008 ** ;font-hex ++ .Screen/addr DEO2
	.Screen/x DEI2 #0007 ++ .Screen/x DEO2
	( draw ) STHr .Screen/color DEO

RTN

@draw-cursor ( -- )

	( clear last cursor )
	.pointer/x LDZ2 .Screen/x DEO2
	.pointer/y LDZ2 .Screen/y DEO2
	#30 .Screen/color DEO

	( record mouse positions )
	.Mouse/x DEI2 .pointer/x STZ2
	.Mouse/y DEI2 .pointer/y STZ2

	( draw new cursor )
	.pointer/x LDZ2 .Screen/x DEO2
	.pointer/y LDZ2 .Screen/y DEO2
	;cursor-icn .Screen/addr DEO2
	#33 .Mouse/state DEI #00 ! - .Screen/color DEO

RTN

@draw-scrollbar ( -- )
	
	;scrollbar_icn ( keeping a copy on stack )

	.Screen/width DEI2 #0008 -- .Screen/x DEO2
	#0008 .Screen/y DEO2
	DUP2 .Screen/addr DEO2

	#0008 .Screen/height DEI2 #0018 --
	&loop
		( draw ) #22 .Screen/color DEO
		( incr ) SWP2 #0008 ++ DUP2 .Screen/y DEO2 SWP2
		OVR2 OVR2 LTH2 ,&loop JCN
	POP2 POP2

	.scroll/y LDZ2 #0008 ++ .Screen/y DEO2
	DUP2 #0008 ++ .Screen/addr DEO2
	( draw ) #21 .Screen/color DEO

	#0000 .Screen/y DEO2
	DUP2 #0010 ++ .Screen/addr DEO2
	( draw ) #22 .Screen/color DEO

	.Screen/height DEI2 #0018 -- .Screen/y DEO2
	#0018 ++ .Screen/addr DEO2
	( draw ) #22 .Screen/color DEO

RTN

@get-cell ( x* y* -- addr* )

	( get row ) 8// #0010 ** SWP2


	DUP2 #00f8 << ,&byte JCN

		POP2
		RTN

	&byte

	DUP2 #001b // #0003 ** --

	#0007 // #0002 //

	++ 

RTN

@new-file ( default* -- )
	
	( BANK LENGTH ;op-clear JSR2 )
	STH2
	#00 #0c
	&loop
		OVR DUP TOS STH2kr ++ LDA
		SWP .path/name + STZ
		INCR
		LTHk ,&loop JCN
	.path/length STZ POP 
	POP2r
	;load-file JSR2

RTN

@load-file ( -- )

	( BANK LENGTH ;op-clear JSR2 )
	;path/name .File/name DEO2 
	#2000 .File/length DEO2 
	;MEMORY .File/load DEO2

RTN

@save-file ( -- )

	;path/name .File/name DEO2 
	#2000 .File/length DEO2 
	;MEMORY .File/save DEO2

RTN

@draw-filepath ( color -- )
	
	STH
	.Screen/height DEI2 #0008 -- .Screen/y DEO2
	;path/name
	&loop
		LDAk DUP #00 ! #20 * - TOS #0008 ** ;font ++ .Screen/addr DEO2 
		STHkr .Screen/color DEO
		.Screen/x DEI2 #0008 ++ .Screen/x DEO2
		#0001 ++
		LDAk ,&loop JCN
	POP2
	POPr
	( clear last ) 
	#20 .Screen/color DEO

RTN

